
<h1><%="#{@game.player_1.name} vs #{@game.player_2.name}"%></h1>
<% if @game.current_turn == @game.player_1 %>
<h1><%="#{@game.player_1.name} does a MASSIVE attack on #{@game.player_2.name}" %></h1>
<% else %>
<h1><%="#{@game.player_2.name} does a MASSIVE attack on #{@game.player_1.name}" %></h1>
<% end %>
<form action="/turn_switcher" method="post">
  <input type="submit" value="Return to the battle">
</form>
